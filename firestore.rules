rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isOpenSession(code) {
      return exists(/databases/$(database)/documents/sessions/$(code)) &&
             get(/databases/$(database)/documents/sessions/$(code)).data.closed != true &&
             get(/databases/$(database)/documents/sessions/$(code)).data.expiresAt > request.time;
    }
    match /sessions/{code} {
      allow read: if true;
      allow create: if true;
      allow update: if request.auth != null || isOpenSession(code);
      allow delete: if request.auth != null;
      match /messages/{id} {
        allow read: if isOpenSession(code);
        allow create: if isOpenSession(code);
      }
    }
  }
}
