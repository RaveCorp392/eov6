rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Demo-only: allow public read of uploaded files.
    match /uploads/{code}/{filename} {
      // 1) Allow reads for demo
      allow read: if true;

      // 2) Allow writes when content is image/* or application/pdf and <= 10 MB
      allow write: if request.resource != null
        && (request.resource.contentType.matches('image/.*')
            || request.resource.contentType == 'application/pdf')
        && request.resource.size < 10 * 1024 * 1024;
    }

    // Everything else locked down
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
