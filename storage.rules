rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Session artifacts (images/pdfs) live under sessions/{code}/...
    match /sessions/{code}/{filename} {
      allow read: if true; // public read for shared links/bubbles
      allow write: if
        request.resource.size < 10 * 1024 * 1024 &&
        request.resource.contentType.matches('^(image/.*|application/pdf)$') &&
        code.matches('^[0-9]{5,6}$');
    }

    // Deny everything else
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
