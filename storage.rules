rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Session uploads: images or PDFs under 10MB. Reads open for now.
    match /sessions/{code}/{allPaths=**} {
      allow read: if true;
      allow write: if
        request.resource.size < 10 * 1024 * 1024 &&
        (
          request.resource.contentType.matches('image/.*') ||
          request.resource.contentType == 'application/pdf'
        );
    }
  }
}
